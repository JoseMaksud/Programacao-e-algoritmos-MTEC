Algoritmo "Posneg"
//Verificar se um valor é positivo ou negativo

Var
   Num:inteiro


Inicio
      escreval("Digite um número")
      leia(Num)
      se Num>0 entao
      escreval(Num," é positivo!")
      senao
      se Num<0 entao
      escreval(Num," é negativo")
      senao
      escreval("o valor é Zero")
      fimse
      fimse
      
Fimalgoritmo